@model AdminGenresViewModel
<h1>Admin Genres</h1>
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="All"></div>
        <form asp-controller="Admin" asp-action="GenreCreate" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-md-8">
        <table class="table table-dark table-borderless">
            <thead>
                <tr>
                    <th style="width:30px">#</th>
                    <th>Name</th>
                    <th style="width:70px">Count</th>
                    <th style="width:180px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var genre in Model.Genres)
                {
                    <tr>
                        <td>@genre.GenreId</td>
                        <td>@genre.Name</td>
                        <td>@genre.Count</td>
                        <td>
                            <a href="/admin/genreupdate/@genre.GenreId" class="btn btn-warning">Update</a>
                            <form action="/admin/genredelete" method="post" style="display:inline">
                                <input type="hidden" name="genreId" value="@genre.GenreId" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
