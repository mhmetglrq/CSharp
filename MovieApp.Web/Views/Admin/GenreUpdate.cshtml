@model AdminGenreEditViewModel
<h1>Edit Genre</h1>
<hr />
<form method="post" asp-controller="Admin" asp-action="GenreUpdate">
    <div class="row">
        <div class="col-md-3">
            <input type="hidden" name="GenreId" value="@Model.GenreId" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-md-9">
            <table class="table table-dark table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="width:15px">Remove</th>
                        <th style="width:30px">Id</th>
                        <th style="width:100px">Image</th>
                        <th>Title</th>
                        <th style="width:160px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model.Movies)
                    {
                        <tr>
                            <td>
                                <input class="form-check-input" type="checkbox" name="movieIds" value="@movie.Id" />
                            </td>
                            <td>@movie.Id</td>
                            <td><img src="~/img/@movie.ImageUrl" alt="@movie.Title" width="80" /></td>
                            <td>@movie.Title</td>
                            <td>
                                <a href="/admin/movieupdate/@movie.Id" class="btn btn-primary btn-sm">Update</a>
                                <a href="#" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>