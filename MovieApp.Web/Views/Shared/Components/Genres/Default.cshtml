@model List<Genre>
<a href="/movies/list" class="list-group-item list-group-item-action @(ViewBag.SelectedGenre==null?"active":"")">Tüm Kategoriler</a>

<div class="list-group">
    @foreach (var genre in Model)
    {
        <a href="/movies/list/@genre.GenreId" class="list-group-item list-group-item-action @(ViewBag.SelectedGenre==genre.GenreId.ToString()?"active":"")">@genre.Name</a>
    }
</div>